<html>
    <head>
        <meta charset="utf-8" />
        <title>Anobo</title>
        <link rel="stylesheet" href="css/edition.css" type="text/css">
        <script src="./js/edition.js"></script>
    </head>

    <body>
      <div>
        <h1>Edition d'une unité d'enregistrement</h1>
      </div>
        <div>
          <form action="/update" method="post" id="myForm"  onsubmit="validateModForm()" class="formulaire" >
              
              <div>
                <label>Numéro d'identifiant: </label>
                <input type="number" name="id_ue" value="<%=data.id_ue%>" required readonly/>
              </div>

              <div class="formulaire">
                <label>Classe </label>
                <select  name="classe" required >
                  <option value="<%=data.classe%>" selected hidden><%=data.classe%></option>
                  <option value="Groupe UE">Groupe UE</option>
                  <option value="US">US</option>
                  <option value="Subdivision">Subdivision</option>
              </select>
              </div>

              <div class="formulaire">
                  <label>Type </label>
                  <select  name="type" required >
                    <option value="<%=data.type%>" selected hidden><%=data.type%></option>
                    <option value="sep">Sépulture</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                </select>
                </div>

                <div class="formulaire">
                  <label>Désignation </label>
                  <select name="designation" required >
                    <option value="<%=data.designation%>" selected hidden><%=data.designation%></option>
                    <option value="sep">Sépulture</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                </select>
                </div>

                <div class="formulaire">
                  <label for="description">Description </label>
                  <textarea type="string" name="description"><%=data.description%></textarea>
                </div>

                <div class="formulaire">
                  <label for="interpretaiton">Interprétation </label>
                  <textarea type="string" name="interpretation"><%=data.interpretation%></textarea>
                </div>

                <div class="formulaire">
                  <label for="secteur">Secteur </label>
                  <input type="text" name="secteur" value="<%=data.secteur%>">
                </div>
              <div class="formulaire">
                <input type="submit" value="Envoyer";>
                <input type="button" value="Retour à l'accueil" onclick="location.replace('/')">
              </div>
          </form>
        </div>
    </body>
</html>